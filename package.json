    "stylelint-config-htmlacademy": "0.1.x",
    "stylelint-scss": "^3.4.4",
    "svg4everybody": "^2.1.9"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss \"!**/normalize.scss\"",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp build:clean && gulp build",
    "start": "gulp build:clean && gulp build:watch",
    "deploy": "npm run build && gh-pages -d build && gulp build:clean"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "engines": {
    "node": "8.11"
  }
}
